# Alpine-based minimal Claude Agent SDK container
# Optimized for fast startup and small size in agent/CI scenarios
# Build Date: 2026-02-24
# Claude Code CLI: @anthropic-ai/claude-code ~v2.1.55
# Claude Agent SDK: @anthropic-ai/claude-agent-sdk ~v0.2.55

# Stage 1: Build stage
FROM node:22-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++ \
    gcc \
    libc-dev

# Install Agent SDK + tsx globally via npm
RUN npm install -g @anthropic-ai/claude-agent-sdk tsx && \
    find /usr/local/lib/node_modules/@anthropic-ai -name "*.exe" -delete && \
    find /usr/local/lib/node_modules/@anthropic-ai -path "*darwin*" -type d -exec rm -rf {} + 2>/dev/null || true && \
    find /usr/local/lib/node_modules/@anthropic-ai -path "*win32*" -type d -exec rm -rf {} + 2>/dev/null || true

# Stage 2: Runtime stage
FROM node:22-alpine AS runtime

# Install minimal runtime dependencies
RUN apk add --no-cache \
    git \
    bash \
    curl \
    nano \
    ca-certificates \
    libgcc \
    libstdc++ \
    ripgrep

# Copy global npm packages (SDK + tsx) from builder
COPY --from=builder /usr/local/lib/node_modules /usr/local/lib/node_modules
COPY --from=builder /usr/local/bin/ /usr/local/bin/

# Install Claude Code CLI via native installer
RUN curl -fsSL https://claude.ai/install.sh | bash && \
    cp /root/.local/bin/claude /usr/local/bin/claude && \
    chmod 755 /usr/local/bin/claude
ENV NODE_PATH=/usr/local/lib/node_modules
ENV PATH="/home/claude/.local/bin:$PATH"

# Create non-root user with CLI symlink at expected path, configure settings
RUN adduser -D -s /bin/bash claude && \
    mkdir -p /home/claude/.local/bin && \
    ln -s /usr/local/bin/claude /home/claude/.local/bin/claude && \
    chown -R claude:claude /home/claude/.local && \
    mkdir -p /home/claude/.claude && \
    echo '{"env":{"DISABLE_AUTOUPDATER":"1","USE_BUILTIN_RIPGREP":"0"}}' > /home/claude/.claude/settings.json && \
    chown -R claude:claude /home/claude/.claude

# Switch to non-root user
USER claude
WORKDIR /home/claude

# Copy Claude configuration scaffolding
COPY --chown=claude:claude .claude .claude

# Copy examples
COPY --chown=claude:claude examples/ /app/examples/

# Copy entrypoint script (as root)
USER root
COPY scripts/docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Switch back to claude user
USER claude

# Set up working directory
WORKDIR /app

ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["bash"]