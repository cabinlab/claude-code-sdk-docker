# Stage 1: Build dependencies
# Build Date: 2026-02-28
# Claude Code CLI: @anthropic-ai/claude-code ~v2.1.63
# Claude Agent SDK: @anthropic-ai/claude-agent-sdk ~v0.2.63
FROM node:22-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    jq \
    ca-certificates \
    build-essential \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Install Agent SDK + tsx globally via npm
RUN npm install -g @anthropic-ai/claude-agent-sdk tsx && \
    # Remove unused platform-specific binaries to reduce image size
    find /usr/local/lib/node_modules/@anthropic-ai -name "*.exe" -delete && \
    find /usr/local/lib/node_modules/@anthropic-ai -path "*darwin*" -type d -exec rm -rf {} + 2>/dev/null || true && \
    find /usr/local/lib/node_modules/@anthropic-ai -path "*win32*" -type d -exec rm -rf {} + 2>/dev/null || true

# Stage 2: Runtime image
FROM node:22-slim AS runtime

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    nano \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy global npm packages (SDK + tsx) from builder
COPY --from=builder /usr/local/lib/node_modules /usr/local/lib/node_modules
COPY --from=builder /usr/local/bin/ /usr/local/bin/
ENV NODE_PATH=/usr/local/lib/node_modules
ENV PATH="/home/claude/.local/bin:$PATH"

# Install Claude Code CLI via native installer
RUN curl -fsSL https://claude.ai/install.sh | bash && \
    cp /root/.local/bin/claude /usr/local/bin/claude && \
    chmod 755 /usr/local/bin/claude

# Create non-root user with CLI symlink at expected path
RUN useradd -m -s /bin/bash claude && \
    mkdir -p /home/claude/.local/bin && \
    ln -s /usr/local/bin/claude /home/claude/.local/bin/claude && \
    chown -R claude:claude /home/claude/.local

# Create directory for Claude auth and configuration
RUN mkdir -p /home/claude/.claude && \
    chmod 755 /home/claude/.claude && \
    chown -R claude:claude /home/claude/.claude

# Set up .claude configuration scaffolding and disable auto-updater
RUN mkdir -p /home/claude/.claude/commands /home/claude/.claude/hooks && \
    echo '{"env":{"DISABLE_AUTOUPDATER":"1"}}' > /home/claude/.claude/settings.json && \
    chown -R claude:claude /home/claude/.claude

# Copy Claude configuration scaffolding
COPY --chown=claude:claude .claude/ /home/claude/.claude/

# Copy examples and scripts
COPY --chown=claude:claude examples/ /app/examples/
COPY --chown=claude:claude scripts/ /app/scripts/

# Copy entrypoint script (as root)
COPY scripts/docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set working directory
WORKDIR /app
RUN chown claude:claude /app

# Switch to non-root user
USER claude

# Expose port (configurable via PORT env var, default 3000)
ARG PORT=3000
ENV PORT=${PORT}
EXPOSE ${PORT}

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Default command
CMD ["sleep", "infinity"]